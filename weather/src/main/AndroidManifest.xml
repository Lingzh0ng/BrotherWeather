<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wearapay.brotherweather">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <application
      android:name=".App"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name=".ui.modules.main.MainActivity"
        android:fitsSystemWindows="true"
        >

    </activity>
    <activity
        android:name=".ui.SplashActivity"
        android:theme="@style/AppTheme.Full">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name=".ui.modules.city.CityListActivity"/>
    <activity android:name=".ui.modules.web.WebViewActivity"/>
    <activity android:name=".ui.modules.photo.PhotoViewActivity"/>
    <activity android:name=".ui.modules.type.TypeListActivity"/>
  </application>

</manifest>