<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="oval">
      <solid
          android:color="#000"/>
      <size
          android:height="15dp"
          android:width="15dp"
          />
    </shape>
  </item>

  <item
      android:bottom="1dp"
      android:left="1dp"
      android:right="1dp"
      android:top="1dp">
    <shape
        android:shape="oval"
        >

      <solid
          android:color="#fff"/>
      <size
          android:height="18dp"
          android:width="18dp"
          />
    </shape>
  </item>

  <item
      android:bottom="2dp"
      android:left="2dp"
      android:right="2dp"
      android:top="2dp">

    <shape
        android:shape="oval"
        >

      <solid
          android:color="#fff"/>
      <size
          android:height="20dp"
          android:width="20dp"
          />
    </shape>
  </item>
</layer-list>